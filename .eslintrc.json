{
  "extends": [
	"next",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "env": {
		"browser": true,
		"es2021": true
	},
	"rules": {
		"prettier/prettier": "error",
		"@typescript-eslint/no-explicit-any": "off",
		"no-warning-comments": [
			"warn",
			{
				"terms": ["todo"],
				"location": "anywhere"
			}
		]
	}
}